{
  "name": "@pi-builder/desktop",
  "version": "0.1.0",
  "description": "Pi Builder desktop app (Electron)",
  "license": "MIT",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc --noEmit && electron dist/main.js",
    "build": "tsc",
    "dist": "tsc && electron-builder",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@pi-builder/core": "workspace:*",
    "electron": "^27.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.4.0"
  },
  "build": {
    "appId": "com.artale.pi-builder",
    "productName": "Pi Builder",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "../../apps/web/pi-builder-ui.html"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
